<Window x:Class="_41_size.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_41_size"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" FontFamily="Comic Sans MS" Icon="images/icon.ico">
  <Grid ShowGridLines="True" Background="#FFFFCC99">
    <Grid.RowDefinitions>
      <RowDefinition Height="75"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <Image Source="images/logo.png" HorizontalAlignment="Left"></Image>
    <TextBlock Text="41 размер" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
    <Button Name="BtnBack" Content="Назад" HorizontalAlignment="Right" Click="BtnBack_Click"/>
    
    <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
  </Grid>
</Window>
